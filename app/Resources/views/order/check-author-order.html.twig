{% extends 'base.html.twig' %}

{% form_theme form "bootstrap_3_layout.html.twig" %}

{% block title %}{{ parent() }} - Vérification de l'auteur de la commande {% endblock  %}
{% block body %}
    <div class="body-content" id="check-order">
        <div class="row">
            <div class="col-lg-12">
                <h1>Vérification de l'auteur de la commande</h1>
                <p>Une commande a été effectué précédemment, nous avons besoin de connaitre si vous en êtes l'auteur !</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2>
                    <i class="glyphicon glyphicon glyphicon-alert"></i> Vérification de votre e-mail
                </h2>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.email, {'label' : 'Votre e-mail', 'attr': {'placeholder': "Saisir l'e-mail qui a été utilisé pour la commande" }}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.callbackpage, {'label' : 'Après la vérification vous voulez :'}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a href="#" class="btn btn-primary">Commencer une nouvelle réservation</a>
                        <input type="submit" value="Valider" class="btn btn-default pull-right">
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
