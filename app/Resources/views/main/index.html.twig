{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Choix billet {% endblock  %}

{% block stylesheets %}
    {{ parent() }}
    {#<link href="{{ asset('css/jquery.datetimepicker.min.css') }}" rel="stylesheet">#}
    <link href="{{ asset('css/bootstrap-datetimepicker.min.css') }}" rel="stylesheet">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/moment-with-locales.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
    <script type="text/javascript">
        // <![CDATA[
        $(function(){
            $('#reservation_calendar').datetimepicker({
                format: 'YYYY-MM-DD',
                locale: 'fr',
                inline: true,
                sideBySide: true,
                daysOfWeekDisabled: [0, 2],
                minDate: new Date()
            });
            $("#reservation_calendar").on("dp.change", function (e) {
                $('#reservation_reservationDate').val(e.date.format('YYYY-MM-DD'));
            });
            $('#reservation_reservationDate').css('display', 'none');
        });
        // ]]>
    </script>
{% endblock %}

{% block body %}
    <div class="body-content" id="basket">
        <div class="row">
            <div class="col-lg-12">
                <h1>Choix des billets</h1>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Animi cumque laborum nulla odio quo ratione sunt? Consectetur consequatur ipsum mollitia repellat ut veniam! Deserunt, eaque et impedit pariatur provident tempore?</p>
            </div>
        </div>
        {{ form_start(form) }}
        {#<form action="{{ path('user-informations') }}" method="post">#}
        <div class="row">
            <div class="col-md-6">
                <h2><i class="glyphicon glyphicon-calendar"></i> Choisissez une date</h2>
                <div class="text-center">
                    {#<input type="date" id="reservation_date" pattern="d/m/Y" value="">#}
                    {{ form_widget(form.reservationDate) }}
                    <div id="reservation_calendar"></div>
                </div>
            </div>
            <div class="col-md-6 border-left">
                <h2><i class="glyphicon glyphicon-time"></i> Choisissez le type de billet</h2>
                <div class="text-center">
                    {{ form_widget(form.ticketType, {'attr': {'class': 'form-control'}}) }}
                    {#<select class="form-control">#}
                        {#<option value="1">Journée</option>#}
                        {#<option value="2">Demi-journée</option>#}
                    {#</select>#}
                </div>
                <h2><i class="glyphicon glyphicon-bookmark"></i> Choisissez le nombre de billet</h2>
                <div class="text-center">
                    <table class="table table-responsive">
                        <caption>Musée du Louvre</caption>
                        <thead>
                        <tr>
                            <th colspan="3">Musée du Louvre</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>
                                <p><strong>Plein tarif Musée</strong></p>
                                <p>Tarif unique</p>
                            </td>
                            <td>
                                {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                                {#<select class="form-control">#}
                                    {#<option value="1">1</option>#}
                                    {#<option value="2">2</option>#}
                                    {#<option value="3">3</option>#}
                                    {#<option value="4">4</option>#}
                                    {#<option value="5">5</option>#}
                                    {#<option value="6">6</option>#}
                                    {#<option value="7">7</option>#}
                                    {#<option value="8">8</option>#}
                                    {#<option value="9">9</option>#}
                                {#</select>#}
                            </td>
                            <td class="amount">
                                10,00 €
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <p class="pull-right"><button type="submit" class="btn btn-default">Continuer</button></p>

                </div>
            </div>
        </div>
        {#</form>#}
        {{ form_end(form) }}
    </div>
{% endblock %}
